<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Code Vault</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/cyborg/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/vs2015.min.css">

    <style>
        body {
            overflow-x: hidden;
            background-color: #111;
        }
        /* القائمة الجانبية الثابتة */
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 0; /* إلغاء الحواشي لجعل التحكم أسهل */
            box-shadow: inset -1px 0 0 rgba(255, 255, 255, .1);
            background-color: #1a1a1a;
            width: 240px;
            display: flex;
            flex-direction: column; /* ترتيب عمودي */
            height: 100vh; /* ملء ارتفاع الشاشة */
        }

        .main-content {
            margin-left: 240px;
            padding: 20px;
        }

        /* تنسيق الروابط */
        .nav-link {
            color: #bbb;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            border-radius: 8px;
            margin: 5px 10px;
            transition: all 0.3s;
        }

            .nav-link:hover, .nav-link.active {
                color: #fff;
                background-color: rgba(255,255,255,0.1);
            }

        .nav-icon-circle {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-weight: bold;
            margin-right: 12px;
            font-size: 0.9rem;
        }

        /* منطقة القائمة القابلة للسكرول */
        .sidebar-menu {
            overflow-y: auto; /* السماح بالسكرول العمودي */
            flex-grow: 1; /* تأخذ المساحة المتبقية */
            padding-top: 20px;
            scrollbar-width: thin; /* شريط تمرير رفيع */
            scrollbar-color: #444 #1a1a1a;
        }

        /* ألوان اللغات */
        .bg-csharp {
            background-color: #e74c3c;
            color: white;
        }

        .bg-js {
            background-color: #f1c40f;
            color: black;
        }

        .bg-html {
            background-color: #3498db;
            color: white;
        }

        .bg-sql {
            background-color: #2ecc71;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <nav class="sidebar">

                <div class="p-4 pb-2">
                    <a class="d-flex align-items-center text-white text-decoration-none">
                        <i class="fas fa-boxes fs-4 me-2 text-primary"></i>
                        <span class="fs-5 fw-bold">CODE VAULT</span>
                    </a>
                </div>

                <div class="sidebar-menu">
                    <h6 class="sidebar-heading px-4 mb-3 text-muted text-uppercase" style="font-size: 0.8rem;">
                        Main Menu
                    </h6>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-lang="" asp-route-showFavorites="false">
                                <span class="nav-icon-circle bg-secondary"><i class="fas fa-layer-group"></i></span> All Snippets
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-showFavorites="true">
                                <span class="nav-icon-circle bg-warning text-dark"><i class="fas fa-star"></i></span> Favorites
                            </a>
                        </li>

                        <li class="my-3 border-top border-secondary mx-3"></li>

                        <h6 class="sidebar-heading px-4 mb-2 text-muted text-uppercase" style="font-size: 0.8rem;">
                            Filter by Language
                        </h6>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-lang="C#">
                                <span class="nav-icon-circle bg-csharp">C#</span> C#
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-lang="JavaScript">
                                <span class="nav-icon-circle bg-js">JS</span> JavaScript
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-lang="HTML">
                                <span class="nav-icon-circle bg-html">H</span> HTML/CSS
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-lang="SQL">
                                <span class="nav-icon-circle bg-sql">SL</span> SQL
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-lang="Java">
                                <span class="nav-icon-circle bg-danger">J</span> Java
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-route-lang="Kotlin">
                                <span class="nav-icon-circle" style="background-color: #a29bfe; color: black;">K</span> Kotlin
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="p-3 mt-auto border-top border-secondary bg-dark">
                    <a asp-controller="Snippets" asp-action="Create" class="btn btn-primary w-100 py-2 fw-bold shadow">
                        + New Snippet
                    </a>
                </div>
            </nav>

            <main class="main-content bg-dark min-vh-100">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>