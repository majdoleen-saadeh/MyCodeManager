@using MyCodeManager.Models
@using System.Security.Claims
@inject MyCodeManager.Data.MyCodeManagerContext _context

@{
    // جلب رقم المستخدم الحالي لتصفية العدادات
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Code Vault</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/cyborg/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/vs2015.min.css">

    <style>
        /* تنسيقات بسيطة للدوائر الملونة */
        .nav-icon-circle {
            width: 20px;
            height: 20px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-weight: bold;
            margin-right: 8px;
            font-size: 0.7rem;
            vertical-align: middle;
        }

        .bg-csharp {
            background-color: #e74c3c;
            color: white;
        }

        .bg-js {
            background-color: #f1c40f;
            color: black;
        }

        .bg-html {
            background-color: #3498db;
            color: white;
        }

        .bg-sql {
            background-color: #2ecc71;
            color: white;
        }

        /* تحسين شكل القائمة المنسدلة في الموبايل */
        .navbar-nav .nav-link {
            padding: 10px 15px;
            border-radius: 5px;
            transition: background 0.2s;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(255,255,255,0.1);
            }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary mb-4 sticky-top shadow">
        <div class="container">

            <a class="navbar-brand fw-bold text-white" asp-controller="Snippets" asp-action="Index">
                <i class="fas fa-boxes text-primary me-2"></i> CODE VAULT
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Snippets" asp-action="Index" asp-route-lang="" asp-route-showFavorites="false">
                            <i class="fas fa-layer-group me-1"></i> All Snippets
                            <span class="badge bg-secondary ms-1 rounded-pill" style="font-size: 0.7rem;">
                                @_context.Snippet.Count(s => s.UserId == userId)
                            </span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-warning" asp-controller="Snippets" asp-action="Index" asp-route-showFavorites="true">
                            <i class="fas fa-star me-1"></i> Favorites
                            <span class="badge bg-secondary ms-1 rounded-pill" style="font-size: 0.7rem;">
                                @_context.Snippet.Count(s => s.IsFavorite && s.UserId == userId)
                            </span>
                        </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-code me-1"></i> Languages
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark border-secondary shadow">
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center" asp-action="Index" asp-route-lang="C#">
                                    <span><span class="nav-icon-circle bg-csharp">C#</span> C#</span>
                                    <span class="badge bg-dark border border-secondary">
                                        @_context.Snippet.Count(s => s.Language == "C#" && s.UserId == userId)
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center" asp-action="Index" asp-route-lang="JavaScript">
                                    <span><span class="nav-icon-circle bg-js">JS</span> JavaScript</span>
                                    <span class="badge bg-dark border border-secondary">
                                        @_context.Snippet.Count(s => s.Language == "JavaScript" && s.UserId == userId)
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center" asp-action="Index" asp-route-lang="HTML">
                                    <span><span class="nav-icon-circle bg-html">H</span> HTML/CSS</span>
                                    <span class="badge bg-dark border border-secondary">
                                        @_context.Snippet.Count(s => (s.Language == "HTML" || s.Language == "HTML/CSS") && s.UserId == userId)
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center" asp-action="Index" asp-route-lang="SQL">
                                    <span><span class="nav-icon-circle bg-sql">SL</span> SQL</span>
                                    <span class="badge bg-dark border border-secondary">
                                        @_context.Snippet.Count(s => s.Language == "SQL" && s.UserId == userId)
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center" asp-action="Index" asp-route-lang="Java">
                                    <span><span class="nav-icon-circle bg-danger">J</span> Java</span>
                                    <span class="badge bg-dark border border-secondary">
                                        @_context.Snippet.Count(s => s.Language == "Java" && s.UserId == userId)
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center" asp-action="Index" asp-route-lang="Kotlin">
                                    <span><span class="nav-icon-circle" style="background-color: #a29bfe; color: black;">K</span> Kotlin</span>
                                    <span class="badge bg-dark border border-secondary">
                                        @_context.Snippet.Count(s => s.Language == "Kotlin" && s.UserId == userId)
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <div class="d-flex align-items-center gap-2">
                    <partial name="_LoginPartial" />

                    <a asp-controller="Snippets" asp-action="Create" class="btn btn-primary fw-bold btn-sm">
                        <i class="fas fa-plus"></i> New
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="bg-dark text-center text-muted py-3 border-top border-secondary mt-auto">
        <small>&copy; 2025 Code Vault - My Personal Library</small>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script>
        hljs.highlightAll();
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>