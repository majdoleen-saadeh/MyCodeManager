@model MyCodeManager.Models.Snippet

@{
    ViewData["Title"] = "Edit Snippet";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow bg-dark text-white">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">✏️ Edit Snippet</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control bg-secondary text-white border-0" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Language</label>
                            <select asp-for="Language" class="form-control bg-secondary text-white border-0">
                                <option value="C#">C#</option>
                                <option value="JavaScript">JavaScript</option>
                                <option value="HTML">HTML/CSS</option>
                                <option value="SQL">SQL</option>
                                <option value="Java">Java</option>
                                <option value="Kotlin">Kotlin</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold text-info">Description</label>
                            <textarea asp-for="Description" class="form-control bg-secondary text-white border-0" rows="2"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Code</label>
                            <textarea asp-for="Code" class="form-control font-monospace bg-dark text-info border-secondary" rows="10"></textarea>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4 p-3 bg-secondary rounded">
                            <input class="form-check-input" type="checkbox" asp-for="IsFavorite" id="favCheck" style="transform: scale(1.3);">
                            <label class="form-check-label fw-bold ms-2" for="favCheck">
                                Mark as Favorite ⭐
                            </label>
                        </div>

                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Save Changes" class="btn btn-success btn-lg px-5" />
                            <a asp-action="Index" class="btn btn-outline-light btn-lg ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>