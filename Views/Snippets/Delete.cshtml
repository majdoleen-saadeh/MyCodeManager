@model MyCodeManager.Models.Snippet

@{
    ViewData["Title"] = "Delete Snippet";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">⚠️ Delete Confirmation</h3>
                </div>
                <div class="card-body text-center p-5">

                    <h4 class="mb-3">Are you sure you want to delete this?</h4>
                    <p class="text-muted mb-4">This action cannot be undone.</p>

                    <div class="alert alert-light border">
                        <strong>Title:</strong> @Model.Title <br />
                        <strong>Language:</strong> @Model.Language
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="mt-4">
                            <input type="submit" value="Yes, Delete it!" class="btn btn-danger btn-lg px-4" />
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>