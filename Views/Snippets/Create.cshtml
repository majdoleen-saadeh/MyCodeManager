@model MyCodeManager.Models.Snippet

@{
    ViewData["Title"] = "Create Snippet";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow bg-dark text-white">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">📝 New Snippet</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control bg-secondary text-white border-0" placeholder="e.g. Database Connection" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Language</label>
                            <select asp-for="Language" class="form-control bg-secondary text-white border-0">
                                <option value="C#">C#</option>
                                <option value="JavaScript">JavaScript</option>
                                <option value="HTML">HTML/CSS</option>
                                <option value="SQL">SQL</option>
                                <option value="Java">Java</option>
                                <option value="Kotlin">Kotlin</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold text-info">Description (Optional)</label>
                            <textarea asp-for="Description" class="form-control bg-secondary text-white border-0" rows="2" placeholder="Short description about this code..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Code</label>
                            <textarea asp-for="Code" class="form-control font-monospace bg-dark text-info border-secondary" rows="10" placeholder="Paste your code here..."></textarea>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Save Snippet" class="btn btn-success btn-lg px-5" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>