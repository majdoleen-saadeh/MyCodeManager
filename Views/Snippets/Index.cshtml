@model IEnumerable<MyCodeManager.Models.Snippet>

@{
    ViewData["Title"] = ViewData["CurrentFilter"] ?? "All Snippets";
}

<style>
    /* 1. تصميم الكروت الجديد: لون ثابت ومريح للعين (VS Code Style) */
    .snippet-card {
        background-color: #1e1e1e; /* رمادي غامق جداً */
        border: 1px solid #333;
        border-radius: 10px;
        transition: transform 0.2s, border-color 0.2s;
        height: 100%;
        position: relative; /* مهم للنجمة */
    }

        .snippet-card:hover {
            transform: translateY(-3px);
            border-color: #007acc; /* إطار أزرق عند التحويم */
        }

    /* 2. تحسين النصوص */
    .card-title {
        color: #d4d4d4; /* لون أبيض "مطفي" مريح للقراءة */
        font-weight: 600;
        margin-right: 30px; /* ترك مسافة للنجمة */
    }

    .card-lang-text {
        color: #9cdcfe; /* لون أزرق فاتح للنصوص الفرعية */
        font-size: 0.85rem;
    }

    /* 3. منطقة الكود المصغر */
    .code-preview {
        background-color: #000000; /* خلفية سوداء تماماً للكود */
        color: #ce9178; /* لون برتقالي باهت للكود */
        font-family: 'Consolas', monospace;
        font-size: 0.8rem;
        padding: 12px;
        border-radius: 6px;
        height: 110px;
        overflow: hidden;
        margin-top: 10px;
        opacity: 0.9;
    }

    /* 4. زر النجمة العائم */
    .star-btn {
        position: absolute;
        top: 15px;
        right: 15px;
        background: none;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        z-index: 10; /* ليكون فوق الرابط */
        transition: transform 0.2s;
    }

        .star-btn:hover {
            transform: scale(1.2);
        }

    .star-filled {
        color: #f1c40f;
    }
    /* أصفر */
    .star-empty {
        color: #444;
    }
    /* رمادي باهت */
</style>

<h2 class="text-white mb-4 ps-2 border-start border-4 border-primary">
    @ViewData["Title"]
</h2>

<div class="row mb-4">
    <div class="col-md-12">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" class="form-control bg-dark text-white border-secondary" placeholder="Search by title or code...">
                <button class="btn btn-primary" type="submit">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        var badgeColor = "bg-secondary";
        if (item.Language == "C#") { badgeColor = "bg-csharp"; }
        else if (item.Language == "JavaScript") { badgeColor = "bg-js"; }
        else if (item.Language == "HTML/CSS") { badgeColor = "bg-html"; }
        else if (item.Language == "SQL") { badgeColor = "bg-sql"; }

        <div class="col-md-4">
            <div class="snippet-card p-3">

                <a asp-action="ToggleFavorite" asp-route-id="@item.Id" class="star-btn">
                    @if (item.IsFavorite)
                    {
                        <i class="fas fa-star star-filled"></i>
                    }
                    else
                    {
                        <i class="far fa-star star-empty"></i>
                    }
                </a>

                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">

                    <h5 class="card-title text-truncate">@item.Title</h5>

                    <div class="d-flex align-items-center mb-2">
                        <span class="nav-icon-circle @badgeColor d-inline-flex" style="width: 20px; height: 20px; font-size: 0.7rem; margin-right: 8px;">
                        </span>
                        <span class="card-lang-text">@item.Language</span>
                    </div>
                    <div class="code-preview">
                        <pre style="margin: 0; white-space: pre-wrap;"><code class="language-@item.Language.Replace("#", "sharp")" style="background: transparent; padding: 0;">@item.Code</code></pre>
                    </div>
                </a>
            </div>
        </div>
    }
</div>