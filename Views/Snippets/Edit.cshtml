@model MyCodeManager.Models.Snippet

@{
    ViewData["Title"] = "Edit Snippet";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">✏️ Edit Snippet</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Language</label>
                            <select asp-for="Language" class="form-control">
                                <option value="C#">C#</option>
                                <option value="JavaScript">JavaScript</option>
                                <option value="HTML">HTML</option>
                                <option value="SQL">SQL</option>
                                <option value="Python">Python</option>
                                <option value="CSS">CSS</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label fw-bold">Code</label>
                            <textarea asp-for="Code" class="form-control font-monospace" rows="10"></textarea>
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="IsFavorite" id="favCheck">
                            <label class="form-check-label text-white" for="favCheck">
                                Mark as Favorite ⭐
                            </label>
                        </div>
                        <div class="form-group text-center mt-4">
                            <input type="submit" value="Save Changes" class="btn btn-primary btn-lg px-5" />
                            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>