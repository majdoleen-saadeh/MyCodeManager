<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Code Vault</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/cyborg/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/vs2015.min.css">

    <style>
        body {
            background-color: #111;
            overflow-x: hidden; /* منع السكرول الأفقي تماماً */
            display: flex; /* استخدام نظام الفليكس لترتيب العناصر بجانب بعض */
            min-height: 100vh;
        }

        /* --- 1. القائمة الجانبية --- */
        .sidebar {
            width: 240px; /* عرض ثابت */
            background-color: #1a1a1a;
            border-right: 1px solid #333;
            display: flex;
            flex-direction: column;
            position: fixed; /* تثبيت القائمة */
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 1000;
        }

        /* منطقة الروابط القابلة للسكرول داخل القائمة */
        .sidebar-scroll-area {
            flex-grow: 1;
            overflow-y: auto;
            padding-top: 10px;
            /* شكل شريط التمرير */
            scrollbar-width: thin;
            scrollbar-color: #444 #1a1a1a;
        }

        /* --- 2. المحتوى الرئيسي --- */
        .main-content {
            margin-left: 240px; /* ترك مسافة للقائمة الجانبية */
            flex-grow: 1; /* تأخذ باقي المساحة المتاحة */
            padding: 30px;
            width: calc(100% - 240px); /* ضمان عدم تجاوز العرض المسموح */
        }

        /* تنسيقات الروابط والأيقونات */
        .nav-link {
            color: #bbb;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            margin: 2px 10px;
            border-radius: 6px;
            transition: 0.2s;
        }

            .nav-link:hover, .nav-link.active {
                background-color: rgba(255,255,255,0.1);
                color: #fff;
            }

        .nav-icon-circle {
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-weight: bold;
            margin-right: 10px;
            font-size: 0.8rem;
        }

        /* ألوان اللغات */
        .bg-csharp {
            background-color: #e74c3c;
            color: white;
        }

        .bg-js {
            background-color: #f1c40f;
            color: black;
        }

        .bg-html {
            background-color: #3498db;
            color: white;
        }

        .bg-sql {
            background-color: #2ecc71;
            color: white;
        }
    </style>
</head>
<body>

    <nav class="sidebar">
        <div class="p-4">
            <a class="d-flex align-items-center text-white text-decoration-none">
                <i class="fas fa-boxes fs-4 me-2 text-primary"></i>
                <span class="fs-5 fw-bold">CODE VAULT</span>
            </a>
        </div>

        <div class="sidebar-scroll-area">
            <h6 class="sidebar-heading px-4 mb-2 text-muted text-uppercase" style="font-size: 0.75rem;">Menu</h6>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-route-lang="" asp-route-showFavorites="false">
                        <span class="nav-icon-circle bg-secondary"><i class="fas fa-layer-group"></i></span> All Snippets
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-route-showFavorites="true">
                        <span class="nav-icon-circle bg-warning text-dark"><i class="fas fa-star"></i></span> Favorites
                    </a>
                </li>
            </ul>

            <hr class="border-secondary mx-3 my-3">

            <h6 class="sidebar-heading px-4 mb-2 text-muted text-uppercase" style="font-size: 0.75rem;">Languages</h6>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" asp-action="Index" asp-route-lang="C#"><span class="nav-icon-circle bg-csharp">C#</span> C#</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="Index" asp-route-lang="JavaScript"><span class="nav-icon-circle bg-js">JS</span> JavaScript</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="Index" asp-route-lang="HTML"><span class="nav-icon-circle bg-html">H</span> HTML/CSS</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="Index" asp-route-lang="SQL"><span class="nav-icon-circle bg-sql">SL</span> SQL</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="Index" asp-route-lang="Java"><span class="nav-icon-circle bg-danger">J</span> Java</a></li>
                <li class="nav-item"><a class="nav-link" asp-action="Index" asp-route-lang="Kotlin"><span class="nav-icon-circle" style="background-color: #a29bfe; color: black;">K</span> Kotlin</a></li>
            </ul>
        </div>

        <div class="p-3 bg-dark border-top border-secondary">
            <a asp-controller="Snippets" asp-action="Create" class="btn btn-primary w-100 fw-bold shadow">
                + New Snippet
            </a>
        </div>
    </nav>

    <main class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>